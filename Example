#include <iostream>
#include <math.h>

using namespace std;

int main() {
setlocale(LC_ALL, "RUS");

int n, i,j = 0, kol = 0, s = 0, minV = 0, minA = 0;



cout << "\nВведите количество элементов массива:\n ";
cin >> n;

int* a = new int[n];

for (i = 0; i < n; i++) {
	cin >> a[i];
	if (a[i] == 0) kol++;
}


cout << "Количесво элементов, равных 0:\n " << kol;


for (i = 0; i < n; i++) {
	if (a[i] < a[i + 1]) {
		minV = a[i];
		minA = i;
	}
}

for (i = minA + 1; i < n; i++) {
	if (a[i] != minV) {
		j++;
	} else {
		j = 0;
	}
	s += a[i];
}

cout << "\nСумма элементов после минимального равна: \n " << s;

for (kol = n - 1; kol > 0; kol--) {
	for (i = 0; i < kol; i++) {
		if (abs(a[i]) > abs(a[i + 1])) {
			s = a[i];
			a[i] = a[i + 1];
			a[i + 1] = s;
		}
	}
}

cout << "\nПолученный массив: \n ";

for (i = 0; i < n; i++)
	cout << a[i] << " ";

cout << "\nКоличество чисел после минимального:\n " << j << endl;

system("Pause");

}
