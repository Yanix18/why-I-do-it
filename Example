#include<iostream>
#include<math.h>

using namespace std;

int main() {

setlocale(LC_ALL, "RUS");

int n, i,j = 0, kol = 0, s = 0, minV = 0, minA = 0;


cout << "\nВведите количество элементов массива:\n";
cin >> n;

int* a=new int[n];

for (i=0; i<n; i++)
  cin >> a[i];

for (i=0; i<n; i++)
  if (a[i]==0) kol++;

cout << "Количесво элементов, равных 0:\n " << kol ;

for (k=1; k < n; k++)
  if( a[min] > a[k] )

min=k;

for( k = min+1; k < n; k++)
  s += a[k];

cout << "\n Сумма элементов после минимального равна: \n " << s ;

for (kol=n-1; kol > 0; kol--)
  for (k=0; k < kol; k++)
    if (abs(a[k]) > abs(a[k+1])) {
      s=a[k];
      a[k]=a[k+1];
      a[k+1]=s;
    }
cout << "\n Полученный массив: \n";

for (k=0; k < n; k++)
  cout << a[k] << " " ;
  
}
